<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_SuportWiFi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="设备支持WiFi"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_Permissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_SuportWiFi"
        android:layout_alignStart="@+id/btn_SuportWiFi"
        android:layout_alignEnd="@+id/btn_SuportWiFi"
        android:layout_marginTop="50dp"
        android:text="申请权限"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_Function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_Permissions"
        android:layout_alignStart="@+id/btn_SuportWiFi"
        android:layout_alignEnd="@+id/btn_SuportWiFi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="WiFi功能"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

</RelativeLayout>